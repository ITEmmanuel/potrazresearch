# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=potplag

# Alternative: Use full DATABASE_URL (overrides individual MySQL settings)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/potplag?charset=utf8mb4

# Admin Account Configuration
ADMIN_EMAIL=admin@potplag.com
ADMIN_PASSWORD=secure_admin_password

# Academi.cx Credentials
ACADEMI_EMAIL=your_email@example.com
ACADEMI_PASSWORD=your_password

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Security Headers (Optional)
TALISMAN_FORCE_HTTPS=false
